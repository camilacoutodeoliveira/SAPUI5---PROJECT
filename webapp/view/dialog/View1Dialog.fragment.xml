<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog id="addDialog" title="Add User">
    <content>
        <VBox>
            <f:SimpleForm id="formContainer">
                <f:content>
                    <Label text="Name"/>
					<Input id="NameID" required="true" />
                    <Label text="Email"/>
					<Input id="EmailID" required="true" />
                </f:content>
            </f:SimpleForm>
        </VBox>
    </content>

    <footer>
        <Toolbar id="idToolbarDialog">
			<content>
                <ToolbarSpacer />
                <Button id="idSave" text="Save" press="onSave" />    
                <Button id="idClose" text="Close" press="onClose" />
            </content>
        </Toolbar>
    </footer>
    </Dialog>
</core:FragmentDefinition>